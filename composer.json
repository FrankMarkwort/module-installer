{
    "name": "poseidon2/composer-module-installer",
    "description": "Poseidon Module Installer",
    "license": "MIT",
    "version": "0.1.0",
    "type": "composer-plugin",
    "keywords": ["composer", "composer-plugin", "composer-installer"],
    "authors": [
        {
            "name": "Frank Markwort",
            "email": "frank.markwort@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": {
            "Composer\\Poseidon2\\": "src/Poseidon2"
        }
    },
    "extra": {
        "class": "Composer\\Poseidon2\\Plugin",
        "plugin-modifies-install-path": true
    },
    "require": {
        "php": "^8.3",
        "composer-plugin-api": "@stable",
        "simplesamlphp/assert": "^v1.1.3"
    },
    "require-dev": {
        "composer/composer": "^2.7.9"
    }
}
